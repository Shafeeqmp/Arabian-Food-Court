<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Arabian Food Court</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="shortcut icon" href="images/favicon.png" type="">
</head>
<body>
    <section>
        <div class="container">
            <table class="table mt-5">
                <thead>
                    <tr>
                        <th scope="col">Item</th>
                        <th scope="col">Title</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><img style="width: 70px; height: 70px;" src="/images/f1.png" alt="Sample Product"></td>     
                        <td>Pizza</td>
                        <td>SR.100</td>
                        <td>
                            <button class="cart-item-count mr-3" onclick="changeQuantity('cart-id', 'product-id', -1)">-</button>
                            <span id="product-id">1</span>
                            <button class="cart-item-count ml-3" onclick="changeQuantity('cart-id', 'product-id', 1)">+</button>
                        </td>
                        <td>
                            <button class="btn btn-danger" onclick="removeProduct('cart-id', 'product-id')">Remove</button>
                        </td>
                    </tr>

                </tbody>
            </table>
            <hr>
            <div class="float-end pr-5">
                <h5>Total: SR.1000</h5>
                <a href="/place-order" class="btn btn-success w-100"><b>Place Order</b></a>
            </div>
        </div>
    </section>

    <script>
        function changeQuantity(cartId, proId, count) {
            let quantityElement = document.getElementById(proId);
            let currentQuantity = parseInt(quantityElement.innerHTML);
            let newQuantity = currentQuantity + count;

            if (newQuantity < 1) {
                alert("Quantity cannot be less than 1.");
                return;
            }

         
            setTimeout(() => {
                if (newQuantity === 0) {
                    alert("Product removed from cart");
                    location.reload();
                } else {
                    quantityElement.innerHTML = newQuantity;
                }
            }, 500);
        }

        function removeProduct(cartId, proId) {
            if (!confirm('Are you sure you want to remove this product?')) {
                return;
            }

         
            setTimeout(() => {
                alert("Product removed from cart");
                location.reload();
            }, 500);
        }
    </script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
