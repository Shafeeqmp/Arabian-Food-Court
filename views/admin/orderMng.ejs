    <script>
        document.querySelectorAll('.status-select').forEach(select => {
    select.addEventListener('change', async function() {
        const orderId = this.dataset.orderId;
        const status = this.value;

        try {
            const response = await fetch('/admin/update-status', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ orderId, status }),
            });

            const result = await response.json();

            if (result.success) {
                Swal.fire({
                    icon: 'success',
                    title: 'Success',
                    text: 'Order status updated successfully',
                    timer: 1500,
                    showConfirmButton: false,
                }).then(() => {
                    location.reload();
                });
                
                // Disable select if status is 'Cancelled'
                if (status === 'Cancelled') {
                    this.disabled = true;
                }
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Failed',
                    text: 'Failed to update order status',
                });
            }
        } catch (error) {
            console.error('Error updating order status:', error);
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'An error occurred while updating the order status',
            });
        }
    });
});


        // Function to check and update cancelled orders on page load
        function updateCancelledOrders() {
            document.querySelectorAll('.status-select').forEach(select => {
                if (select.value === 'Cancelled') {
                    select.disabled = true;
                }
            });
        }

        // Call the function when the page loads
        window.addEventListener('load', updateCancelledOrders);
    </script>
    

